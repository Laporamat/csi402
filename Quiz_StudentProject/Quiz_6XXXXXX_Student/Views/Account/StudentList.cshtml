@model List<Quiz_6XXXXXX_Student.Models.ViewModels.StudentViewModel>
@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="d-flex align-items-center mb-4">
    <i class="fas fa-users fa-2x text-primary me-3"></i>
    <div>
        <h3 class="mb-0 fw-bold">รายชื่อนักศึกษา</h3>
        <small class="text-muted">ทั้งหมด @Model.Count คน</small>
    </div>
</div>

<div class="card shadow border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>#</th>
                        <th>รหัสนักศึกษา</th>
                        <th>ชื่อ</th>
                        <th>นามสกุล</th>
                        <th>Email</th>
                        <th>คณะ</th>
                        <th>สาขา</th>
                        <th>ชั้นปี</th>
                        <th>เบอร์โทร</th>
                        <th>GPA</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 1; }
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>@(i++)</td>
                            <td><span class="badge bg-secondary">@student.StudentId</span></td>
                            <td>@student.FirstName</td>
                            <td>@student.LastName</td>
                            <td><small>@student.Email</small></td>
                            <td>@student.Faculty</td>
                            <td>@student.Major</td>
                            <td class="text-center">@student.Year</td>
                            <td>@student.PhoneNumber</td>
                            <td>
                                <span class="badge @(student.GPA >= 3.5 ? "bg-success" : student.GPA >= 3.0 ? "bg-info" : student.GPA >= 2.5 ? "bg-warning text-dark" : "bg-danger")">
                                    @student.GPA.ToString("F2")
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
