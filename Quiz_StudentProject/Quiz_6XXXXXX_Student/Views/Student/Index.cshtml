@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-8">
        <div class="card shadow border-0" style="border-radius:16px; overflow:hidden;">
            <div class="card-body text-center py-5">
                <i class="fas fa-user-check fa-4x text-primary mb-3"></i>
                <h2 class="fw-bold text-primary mb-3">ยินดีต้อนรับ</h2>
                <h3 class="text-dark">ยินดีต้อนรับคุณ : <span class="badge bg-primary fs-5">@ViewBag.UserId</span> เข้าสู่ระบบ</h3>
                <p class="text-muted mt-3">กรุณาเลือกเมนูด้านบนเพื่อใช้งานระบบ</p>
                <div class="d-flex justify-content-center gap-3 mt-4 flex-wrap">
                    <a href="@Url.Action("CalculateForm","Account")" class="btn btn-outline-primary">
                        <i class="fas fa-calculator me-1"></i>คำนวณคะแนน
                    </a>
                    <a href="@Url.Action("StudentList","Account")" class="btn btn-outline-success">
                        <i class="fas fa-users me-1"></i>รายชื่อนักศึกษา
                    </a>
                    <a href="@Url.Action("MyDetails","Student")" class="btn btn-outline-info">
                        <i class="fas fa-id-card me-1"></i>ข้อมูลของฉัน
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
