@{
    ViewData["Title"] = "My Details";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="d-flex align-items-center mb-4">
    <i class="fas fa-id-card fa-2x text-primary me-3"></i>
    <div>
        <h3 class="mb-0 fw-bold">ข้อมูลของฉัน</h3>
        <small class="text-muted">รายละเอียดข้อมูลนักศึกษา</small>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow border-0" style="border-radius: 16px; overflow: hidden;">
            <div class="card-header bg-primary text-white text-center py-4">
                <i class="fas fa-user-circle fa-4x mb-2 d-block"></i>
                <h5 class="mb-0">@ViewBag.FirstName @ViewBag.LastName</h5>
                <small>@ViewBag.StudentId</small>
            </div>
            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-sm-6">
                        <div class="info-item p-3 bg-light rounded">
                            <small class="text-muted d-block"><i class="fas fa-id-badge me-1 text-primary"></i>รหัสนักศึกษา</small>
                            <strong>@ViewBag.StudentId</strong>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="info-item p-3 bg-light rounded">
                            <small class="text-muted d-block"><i class="fas fa-user me-1 text-primary"></i>ชื่อ-นามสกุล</small>
                            <strong>@ViewBag.FirstName @ViewBag.LastName</strong>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="info-item p-3 bg-light rounded">
                            <small class="text-muted d-block"><i class="fas fa-envelope me-1 text-primary"></i>Email</small>
                            <strong>@ViewBag.Email</strong>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="info-item p-3 bg-light rounded">
                            <small class="text-muted d-block"><i class="fas fa-phone me-1 text-primary"></i>เบอร์โทรศัพท์</small>
                            <strong>@ViewBag.PhoneNumber</strong>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="info-item p-3 bg-light rounded">
                            <small class="text-muted d-block"><i class="fas fa-university me-1 text-primary"></i>คณะ</small>
                            <strong>@ViewBag.Faculty</strong>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="info-item p-3 bg-light rounded">
                            <small class="text-muted d-block"><i class="fas fa-book me-1 text-primary"></i>สาขาวิชา</small>
                            <strong>@ViewBag.Major</strong>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="info-item p-3 bg-light rounded">
                            <small class="text-muted d-block"><i class="fas fa-layer-group me-1 text-primary"></i>ชั้นปีที่</small>
                            <strong>ปีที่ @ViewBag.Year</strong>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="info-item p-3 bg-light rounded">
                            <small class="text-muted d-block"><i class="fas fa-star me-1 text-primary"></i>เกรดเฉลี่ย (GPA)</small>
                            <strong class="text-success">@ViewBag.GPA</strong>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="info-item p-3 bg-light rounded">
                            <small class="text-muted d-block"><i class="fas fa-map-marker-alt me-1 text-primary"></i>ที่อยู่</small>
                            <strong>@ViewBag.Address</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
